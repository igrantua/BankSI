{
  "name": "socialideasbank",
  "version": "1.0.0",
  "description": "Node.js Rest Api with Express, Sequelize & PostgreSQL",
  "main": "./app/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon ./app/index.js",
    "lint": "eslint --fix app/**"
  },
  "author": "igrantua",
  "license": "ISC",
  "engines": {
    "node": ">=12.16.1"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "connect-redis": "^4.0.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.1",
    "helmet": "^3.21.3",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-auth0": "^1.3.2",
    "passport-local": "^1.0.0",
    "pg": "^7.18.1",
    "pg-hstore": "^2.3.3",
    "pino-http": "^5.0.0",
    "redis": "^3.0.2",
    "sequelize": "^5.21.4",
    "sequelize-cli": "^5.5.1",
    "session-file-store": "^1.4.0",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.2",
    "pino-pretty": "^4.0.0",
    "prettier": "^1.19.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "plugin:node/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "strict": "off",
      "no-plusplus": "off",
      "no-bitwise": "off",
      "no-console": "off",
      "prettier/prettier": "error",
      "node/exports-style": "error",
      "node/prefer-global/console": "error",
      "node/prefer-global/process": "error",
      "node/prefer-global/url": "error",
      "node/prefer-promises/fs": "error"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  }
}
